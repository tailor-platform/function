{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "tailor.d.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
